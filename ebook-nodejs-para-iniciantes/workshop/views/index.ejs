<!DOCTYPE html>
<html>
  <head>
    <title>Lista de Clientes</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
    	<h1>Lista de Clientes</h1>
    	<p>
    		Clientes já cadastrados no sistema.
    	</p>
    	<table>
    		<thead>
    			<tr>
    				<td>Nome</td>
    				<td>Idade</td>
    				<td>UF</td>
    				<td>Ações</td>
    			</tr>
    		</thead>
    		<tbody>
    			<% if(!docs || docs.length == 0 ){ %>
    				<tr>
    					<td colspan="4">Nenhum cliente cadastrado. </td>
    				</tr> 
       			<% } else docs.forEach(function(customers){ %>
       					<tr>
       						<td><%= customers.nome%></td>
       						<td><%= customers.idade%></td>
       						<td><%= customers.uf%></td>
       						<td><a href='/new/delete/<%= customers._id %>' onclick='return confirm("Confirmar exclusão ?");'>Excluir</a></td>
       					</tr>	
       				<% }) %>
    		</tbody>
    		<tfoot>
    			<td colspan="4">
    				<a href="/new">Cadastrar novo Cliente</a>
    			</td>
    		</tfoot>
    	</table>
    </div>
  </body>
</html>
